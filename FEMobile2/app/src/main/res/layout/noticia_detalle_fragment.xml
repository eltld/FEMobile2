<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.feunju.fragment.NoticiaDetalleFragment">

    <RelativeLayout
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:background="@color/header_text"
        android:layout_below="@+id/include1" >

        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/text_noticiaContentTitulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="Titulo"
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:typeface="serif" />



                <TextView
                    android:id="@+id/text_noticiaContentBajada"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_noticiaContentTitulo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="Bajada"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:typeface="sans" />

                <TextView
                    android:id="@+id/text_noticiaContentFecha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="Fecha"
                    android:textColor="@color/gray"
                    android:textSize="15dp"
                    android:typeface="normal" />
                <TextView
                    android:id="@+id/text_noticiaLineaTres"
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_noticiaContentBajada"
                    android:layout_marginTop="3dp"
                    android:background="@color/gray_claro" />


                <ImageView
                    android:id="@+id/image_noticiaContentImage"
                    android:layout_width="300dp"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_noticiaLineaUno"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.19"
                    android:src="@drawable/ic_launcher" />



                <TextView
                    android:id="@+id/text_noticiaContentCuerpo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/image_noticiaContentImage"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="Cuerpo" />

            </LinearLayout>

        </ScrollView>



    </RelativeLayout>

</FrameLayout>
