<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:minHeight="50dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/noticia_noticiaImage"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_launcher"
        android:paddingLeft="3dp"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/noticia_noticiaId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/noticia_noticiaBajada"
        android:layout_centerVertical="true"
        android:text="noticiaId" />

    <TextView
        android:id="@+id/noticia_noticiaTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Titulo"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/noticia_noticiaImage"
        android:typeface="serif" />

    <TextView
        android:id="@+id/noticia_noticiaBajada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noticia_noticiaTitulo"
        android:layout_toRightOf="@+id/noticia_noticiaImage"
        android:paddingLeft="8dp"
        android:text="Bajada"
        android:textSize="10dp" />

    </RelativeLayout>
